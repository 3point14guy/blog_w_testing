<h3 class='text-center'>Post a new Article</h3>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @article.errors.any? %>
        <div class="card text-white bg-danger col-md-offset-1">
          <div class="card-body">
            <h5 class="card-title">
              <%= pluralize(@article.errors.count, "error") %>
              prohibited this article from being saved:
            </h5>
            <div class="card-text">
              <ul>
                <% @article.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <br>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :title %>
        </div>
        <div class="col-md-7">
          <%= f.text_field :title, class: 'form-control', placeholder: "Article Title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :body %>
        </div>
        <div class="col-md-7">
          <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: "Your article text"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= f.submit 'Post Article', class: 'btn btn-primary btn-lg pull-right'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
