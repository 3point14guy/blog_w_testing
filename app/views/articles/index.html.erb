<% if user_signed_in? %>
  <%= link_to "New Article", new_article_path, class: "btn btn-outline-success", id: "new-article-btn" %>
<% end %>

<% if @articles.empty? %>
  <h3 id="no-articles">No Articles have been created.</h3>
<% else %>
  <% @articles.each do |article| %>
    <div class="card card-light">
      <div class="card-header">
        <%= link_to article.title, article_path(article) %>
      </div>
      <div class="card-body">
        <div class="card-text">
          <%= truncate(article.body, length: 250) %>
        </div>
        <div class="author">
          <small>Created by: <%= article.user.email %></small>
        </div>
      </div>
    </div>
    <br>
  <% end %>
<% end %>
